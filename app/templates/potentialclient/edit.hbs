<div class="contenedor-principal" style="margin: 20px 50px">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Editar cliente potencial</h1>
        <div class="button-container">
            <button {{action 'editPotentialClient' model.id}} class="btn btn-primary myButton"><i class="fas fa-check"></i> Guardar</button>
            <button {{action 'cancel' model.id}}class="btn btn-primary myButton"><i class="fas fa-times"></i> Cancelar</button>
        </div>
    </div>

     <form>
        <div style="margin-bottom: 15px; margin-top: 40px">
            <h5>Datos de la persona:</h5>
        </div>
        <div class="row" style="padding: 10px">
            <div class="col-md-4 col-sm-4">
                <strong><label>Nombre</label></strong>
                {{input type="text" class="form-control" value=model.nombre required=true}}
            </div> 
            <div class="col-md-4 col-sm-4">
                <strong><label>Apellido paterno</label></strong>
                {{input type="text" class="form-control" value=model.apellidoPaterno required=true}}
            </div> 
            <div class="col-md-4 col-sm-4">
                <strong><label>Apellido materno</label></strong>
                {{input type="text" class="form-control" value=model.apellidoMaterno required=true}}
            </div>
        </div>

        <div class="row" style="padding: 10px">
            <div class="col-md-6 col-sm-6">
                <strong><label>Email</label></strong>
                {{input type="email" class="form-control" value=model.email required=true}}
            </div>
            <div class="col-md-4 col-sm-4">
                <strong><label>Tel√©fono</label></strong>
                {{input type="text" class="form-control" value=model.telefono}}
            </div>
        </div>
            
        <div style="margin-bottom: 15px; margin-top: 40px">
            <h5>Servicio que le interesa:</h5>
        </div>

        <div class="row" style="padding: 10px">
             <div class="col-md-4 col-sm-4">
                <strong><label>Numero del Servicio</label></strong>
                <select name="numeroDelServicio" class="form-control" onchange={{action "updateValue" value="target.value"}}>
                    <option value="default">-----</option>
                    <option value="1">Servicio 01</option>
                    <option value="2">Servicio 02</option>
                    <option value="3">Servicio 03</option>
                </select>
            </div>
        </div>

        <div style="margin-bottom: 15px; margin-top: 40px">
            <h5>Encuesta:</h5>
        </div>

        <div class="row" style="padding: 10px">
             <div class="col-md-4 col-sm-4">
                <strong><label>Donde escucho del servicio:</label></strong>
                <select name="dondeEscucho" class="form-control" onchange={{action "updateListen" value="target.value"}}>
                    <option value="default">-----</option>
                    <option value="facebook">Facebook</option>
                    <option value="radio">Radio</option>
                    <option value="amigo">Amigo</option>
                    <option value="otro">Otro</option>
                </select>
            </div>
        </div>

    </form>
</div>