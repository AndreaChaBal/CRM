<div style="display: -ms-flexbox;
    display: flex;
    -ms-flex-align: center;
    align-items: center;
    height:100vh;
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
    background-image: url('{{rootURL}}images/background1.jpg');
    background-size: cover;">
  <form class="form-signin" style="background-color: #fff; margin-top: 40px; padding-top: 40px; padding-bottom: 40px;" action="indexweb.html">
    <center><img class="" src="{{rootURL}}images/logo.png" alt="" width="70">
      <br>
      <br>
      <h6 class="" style="margin:0px; color:#666; font-size:13px;">INGRESA TUS DATOS</h6></center>
    <br>
    <br>
    <label for="inputEmail" class="sr-only">Email</label>
    {{input type="email" id="inputEmail" class="form-control" placeholder="Email" value=user}}
    <label for="inputPassword" class="sr-only">Contraseña</label>
    {{input type="password" id="inputPassword" class="form-control" placeholder="Contraseña" value=pass}}
    {{#if error}}
      <div class="alert alert-danger" role="alert">
        {{error}}
      </div>
    {{/if}}
    <br>
    <br>
    <button class="btn btn-lg btn-primary btn-block" type="submit" style="font-size: 17px; font-weight: bold; padding:12px 0px;" {{action 'login' user pass}}>Iniciar sesión</button>
  </form>
  <p class="" style="position: absolute; color:#fff; bottom:0px; left:47%;">© 2018</p>
</div>